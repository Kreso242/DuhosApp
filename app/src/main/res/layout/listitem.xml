<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/clicked_item_list"
        >
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/parentLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_background"
        >

        <TextView
            android:id="@+id/idPitanje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pitanje"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold">
        </TextView>

    </RelativeLayout>
    <!--
    <TextView
        android:id="@+id/redniBrojPitanja"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="1."
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:textColor="#000000"
        android:gravity="center"
        android:background="@drawable/list_item_background">
    </TextView>
    -->
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/odgovorShareSrce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parentLayout"
        android:background="@drawable/clicked_item_list"
        android:visibility="visible"
        >
        <TextView
            android:id="@+id/idOdgovor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Odgovor"
            android:textColor="@color/bijela"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:visibility="visible"
            >
        </TextView>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idOdgovor"
            android:layout_centerInParent="true"
            >
        <ImageButton
            android:id="@+id/punoSrce"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/puno_srce"
            android:textColor="#000000"
            android:visibility="gone"
            android:layout_marginBottom="5dp"
            android:background="@drawable/clicked_item_list"
            android:layout_marginLeft="40dp"
            >
        </ImageButton>
        <ImageButton
            android:id="@+id/praznoSrce"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/prazno_srce"
            android:textColor="#000000"
            android:visibility="visible"
            android:layout_marginBottom="5dp"
            android:background="@drawable/clicked_item_list"
            android:layout_marginLeft="40dp"
            >
        </ImageButton>
        <ImageButton
            android:id="@+id/share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/share_icon"
            android:onClick="shareContent"
            android:layout_marginBottom="5dp"
            android:background="@drawable/clicked_item_list"
            />
        </RelativeLayout>
    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>